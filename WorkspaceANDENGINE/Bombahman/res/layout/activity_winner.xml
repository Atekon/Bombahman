<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/WinnerLayoutRelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WinnerActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/WinnerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="@string/playerWon"
        android:textColor="#000000"
        android:textSize="@dimen/PlayerXwon" />

    <TextView
        android:id="@+id/StatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/WinnerText"
        android:layout_centerHorizontal="true"
        android:text="@string/defeat"
        android:textColor="#000000"
        android:textSize="@dimen/PlayerVictoryStatus" />

</RelativeLayout>