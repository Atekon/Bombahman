package pt.cagojati.bombahman.multiplayer.messages;

public static class AddFaceClientMessage extends ClientMessage {
	private int mID;
	private float mX;
	private float mY;

	public AddFaceClientMessage() {

	}

	public AddFaceClientMessage(final int pID, final float pX, final float pY) {
		this.mID = pID;
		this.mX = pX;
		this.mY = pY;
	}

	public void set(final int pID, final float pX, final float pY) {
		this.mID = pID;
		this.mX = pX;
		this.mY = pY;
	}

	@Override
	public short getFlag() {
		return MessageFlags.FLAG_MESSAGE_CLIENT_ADD_FACE;
	}

	@Override
	protected void onReadTransmissionData(final DataInputStream pDataInputStream) throws IOException {
		this.mID = pDataInputStream.readInt();
		this.mX = pDataInputStream.readFloat();
		this.mY = pDataInputStream.readFloat();
	}

	@Override
	protected void onWriteTransmissionData(final DataOutputStream pDataOutputStream) throws IOException {
		pDataOutputStream.writeInt(this.mID);
		pDataOutputStream.writeFloat(this.mX);
		pDataOutputStream.writeFloat(this.mY);
	}
}